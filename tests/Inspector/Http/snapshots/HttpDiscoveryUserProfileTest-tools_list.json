      "inputSchema": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "description": "the ID of the user to message"
          },
          "customMessage": {
            "type": [
              "null",
              "string"
            ],
            "description": "an optional custom message part",
            "default": null
          }
        },
        "required": [
          "userId"
        ]
      }
    },
