      "inputSchema": {
        "type": "object",
        "properties": {
          "a": {
            "type": "number"
          },
          "b": {
            "type": "number"
          },
          "operation": {
            "type": "string",
            "default": "add"
          }
        },
        "required": [
          "a",
          "b"
        ]
      }
    },
    {
      "name": "send_welcome",
